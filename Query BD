CREATE DATABASE BOLO_KILLERS;
USE BOLO_KILLERS;

CREATE TABLE HAMPTER 
(ID_HAMPTER INT NOT NULL AUTO_INCREMENT PRIMARY KEY, 
NOMBRE_HAMPTER VARCHAR(30), 
EDAD INT, 
TIPO_ASESINATO VARCHAR(30) CHECK (TIPO_ASESINATO="ARMAS DE FUEGO" OR TIPO_ASESINATO="ARMAS BLANCAS" OR TIPO_ASESINATO="BRUJERIA" OR TIPO_ASESINATO="DE LA RISA" OR 
TIPO_ASESINATO="'ACCIDENTALMENTE'"), 
DESCRIPCION_HAMPTER VARCHAR(500), 
COSTO_CONTRATO DECIMAL(10,2), 
BAJAS_CONFIRMADAS INT, 
FOTO_HAMPTER LONGBLOB);

CREATE TABLE USUARIO
(ID_USUARIO INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
ALIAS VARCHAR(60) NOT NULL,
CORREO VARCHAR(70) UNIQUE NOT NULL,
CONTRASEÃ‘A VARCHAR(20) NOT NULL);

CREATE TABLE CONTRATACION
(ID_CONTRATO INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
FOTO_VICTIMA LONGBLOB,
NOMBRE_VICTIMA VARCHAR(60) NOT NULL,
HAMPTER_CONTRATADO INT, FOREIGN KEY HAMPTER_CONTRATADO REFERENCES HAMPTER(ID_HAMPTER),
USUARIO_CORROMPIDO INT, FOREIGN KEY USUARIO_CORROMPIDO REFERENCES USUARIO(ID_USUARIO));
